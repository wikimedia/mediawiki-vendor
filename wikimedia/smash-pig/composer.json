    "require": {
        "coderkungfu/php-queue": "^1.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "php": ">=8.0",
        "phpmailer/phpmailer": "^6",
        "predis/predis": "^1.1",
        "symfony/http-foundation": "^5|^6",
        "symfony/yaml": "^4|^5|^6|^7",
        "amzn/login-and-pay-with-amazon-sdk-php": "^2.5",
        "psr/cache": "^1.0",
        "psr/log": "^1.0",
        "psr/container": "~1.0 || ~2.0",
        "corneltek/getoptionkit": "^2.5",
        "gr4vy/gr4vy-php": "0.27",
        "brick/money": "^0.10.3",
        "phpseclib/phpseclib": "~3"
    },
    "require-dev": {
    	"php-parallel-lint/php-parallel-lint": "^1.2",
    	"phpunit/phpunit": "^9.5",
    	"ext-sqlite3": "*",
    	"mediawiki/mediawiki-codesniffer": "^46.0"
    },
    "scripts": {
    	"fix": "phpcbf",
    	"test": [
    		"parallel-lint . --exclude vendor",
    		"[ ! -f phpunit.xml ] || phpunit",
    		"phpcs -p -s"
    	]
    },
    "autoload": {
        "psr-4": {
            "SmashPig\\": "./"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/ejegg/login-and-pay-with-amazon-sdk-php"
        }
    ],
    "config": {
      "platform": {
        "php": "8.2.26"
      },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
