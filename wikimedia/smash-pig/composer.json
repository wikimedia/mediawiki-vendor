    "homepage": "http://smashpig.org",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Katie Horn",
            "email": "khorn@wikimedia.org"
        },
        {
            "name": "Matthew Walker",
            "email": "mwalker@wikimedia.org"
