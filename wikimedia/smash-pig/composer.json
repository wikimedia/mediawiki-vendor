            "email": "agreen@wikimedia.org"
        }
    ],
    "require": {
        "coderkungfu/php-queue": "^1.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "php": ">=7.4",
        "phpmailer/phpmailer": "^6",
        "predis/predis": "^1.1",
        "symfony/http-foundation": "^5|^6",
        "symfony/yaml": "^4|^5",
        "amzn/login-and-pay-with-amazon-sdk-php": "^2.5",
        "psr/cache": "^1.0",
        "psr/log": "^1.0",
        "corneltek/getoptionkit": "^2.5",
        "gr4vy/gr4vy-php": "0.23.2"
    },
	"require-dev": {
		"php-parallel-lint/php-parallel-lint": "^1.2",
		"phpunit/phpunit": "^9.5",
		"ext-sqlite3": "*",
		"mediawiki/mediawiki-codesniffer": "^31.0"
	},
	"scripts": {
		"fix": "phpcbf",
		"test": [
			"parallel-lint . --exclude vendor",
			"[ ! -f phpunit.xml ] || phpunit",
			"phpcs -p -s"
		]
	},
    "autoload": {
        "psr-4": {
            "SmashPig\\": "./"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/ejegg/login-and-pay-with-amazon-sdk-php"
        }
    ],
    "config": {
      "platform": {
        "php": "7.4.33"
      }
    }
}
