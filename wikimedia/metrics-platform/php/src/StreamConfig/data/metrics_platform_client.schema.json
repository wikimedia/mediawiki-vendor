{
	"$schema": "http://json-schema.org/schema#",
	"description": "Metrics Platform Client configuration schema. See https://phabricator.wikimedia.org/T299916 and associated tasks for detail.",
	"$defs": {
		"context_attribute": {
			"type": "string",
			"enum": [
				"agent_client_platform",
				"agent_client_platform_family",

				"page_id",
				"page_title",
				"page_namespace_id",
				"page_namespace_name",
				"page_revision_id",
				"page_wikidata_id",
				"page_wikidata_qid",
				"page_content_language",
				"page_is_redirect",
				"page_user_groups_allowed_to_move",
				"page_user_groups_allowed_to_edit",

				"mediawiki_skin",
				"mediawiki_version",
				"mediawiki_is_production",
				"mediawiki_is_debug_mode",
				"mediawiki_database",
				"mediawiki_site_content_language",
				"mediawiki_site_content_language_variant",

				"performer_is_logged_in",
				"performer_id",
				"performer_name",
				"performer_session_id",
				"performer_pageview_id",
				"performer_groups",
				"performer_is_bot",
				"performer_is_temp",
				"performer_language",
				"performer_language_variant",
				"performer_can_probably_edit_page",
				"performer_edit_count",
				"performer_edit_count_bucket",
				"performer_registration_dt"
			]
		},
		"curation_operand": {
			"type": [
				"string",
				"number",
				"boolean",
				"null"
			]
		},
		"curation_operands": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/curation_operand"
			}
		},
		"curation_rules": {
			"type": "object",
			"minProperties": 1,
			"additionalProperties": false,
			"properties": {
				"equals": {
					"$ref": "#/$defs/curation_operand"
				},
				"not_equals": {
					"$ref": "#/$defs/curation_operand"
				},
				"greater_than": {
					"$ref": "#/$defs/curation_operand"
				},
				"less_than": {
					"type": "number"
				},
				"greater_than_or_equals": {
					"type": "number"
				},
				"less_than_or_equals": {
					"type": "number"
				},
				"in": {
					"$ref": "#/$defs/curation_operands"
				},
				"not_in": {
					"$ref": "#/$defs/curation_operands"
				},
				"contains": {
					"$ref": "#/$defs/curation_operand"
				},
				"does_not_contain": {
					"$ref": "#/$defs/curation_operand"
				},
				"contains_all": {
					"$ref": "#/$defs/curation_operands"
				},
				"contains_any": {
					"$ref": "#/$defs/curation_operands"
				}
			}
		}
	},
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"events": {
			"description": "The instrument events for which the Metrics Platform Client will produce corresponding events to the stream.",
			"type": "array",
			"items": {
				"type": "string"
			},
			"uniqueItems": true,
			"required": false
		},
		"provide_values": {
			"description": "The context attributes that the Metrics Platform Client will include in the events produced to the stream.",
			"type": "array",
			"items": {
				"$ref": "#/$defs/context_attribute"
			},
			"uniqueItems": true,
			"required": false
		},
		"sample": {
			"description": "Configuration for the Metrics Platform Client to determine whether an event is in the sample of events to be produced to the stream.",
			"type": "object",
			"required": false,
			"additionalProperties": false,
			"properties": {
				"rate": {
					"type": "number",
					"required": true,
					"minimum": 0,
					"maximum": 1
				},
				"unit": {
					"type": "string",
					"required": true,
					"enum": [
						"session",
						"pageview"
					]
				}
			}
		},
		"curation": {
			"description": "Configuration for the Metrics Platform Client to determine whether an event should be produced to the stream.",
			"type": "object",
			"required": false,
			"minProperties": 1,
			"additionalProperties": false,
			"$comment": "TODO: Simplify \"properties\" once \"propertyNames\" support lands in justinrainbow/json-schema (see https://github.com/justinrainbow/json-schema/issues/573).",
			"properties": {
				"agent_client_platform": {
					"$ref": "#/$defs/curation_rules"
				},
				"agent_client_platform_family": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_title": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_namespace_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_namespace_name": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_revision_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_wikidata_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_wikidata_qid": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_content_language": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_is_redirect": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_user_groups_allowed_to_move": {
					"$ref": "#/$defs/curation_rules"
				},
				"page_user_groups_allowed_to_edit": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_skin": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_version": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_is_production": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_is_debug_mode": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_site_content_language": {
					"$ref": "#/$defs/curation_rules"
				},
				"mediawiki_site_content_language_variant": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_is_logged_in": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_name": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_session_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_pageview_id": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_groups": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_is_bot": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_is_temp": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_language": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_language_variant": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_can_probably_edit_page": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_edit_count": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_edit_count_bucket": {
					"$ref": "#/$defs/curation_rules"
				},
				"performer_registration_dt": {
					"$ref": "#/$defs/curation_rules"
				}
			}
		}
	}
}
