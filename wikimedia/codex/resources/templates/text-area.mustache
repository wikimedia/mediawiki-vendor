<div class="cdx-text-area cdx-text-area--status-{{status}}{{#hasStartIcon}}cdx-text-area--has-start-icon{{/hasStartIcon}}{{#hasEndIcon}} cdx-text-area--has-end-icon{{/hasEndIcon}}{{#renderClasses}}{{wrapperAttributes}}{{/renderClasses}}"{{#renderAttributes}} {{{ wrapperAttributes }}}{{/renderAttributes}}>
